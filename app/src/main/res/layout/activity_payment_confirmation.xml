<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Marketplace.PaymentConfirmation">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:visibility="visible"
        android:theme="@style/ToolbarStyle"
        app:titleMarginTop="20dp"/>

    <ScrollView
        android:id="@+id/qwert"
        android:visibility="visible"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout_inputs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idUnique"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:hint="ID"
                        android:inputType="none"
                        android:editable="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:hint="Name"
                        android:inputType="none"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deliveryFee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:text="â‚±25.00"
                        android:hint="Delivery Fee"
                        android:inputType="none"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:hint="Total Amount"
                        android:inputType="none"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/datepay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:hint="Data Payment"
                        android:inputType="none"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/referenceNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:inputType="number"
                        android:hint="Reference No."/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/itemDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:visibility="visible"
                    android:orientation="vertical">
                </LinearLayout>

                <ImageView
                    android:id="@+id/payImage"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@drawable/background_plant"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="Please insert your Payment Screenshot here"/>

                <Button
                    android:id="@+id/selectPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Select Photo"/>

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Remarks"-->
<!--                    android:textSize="22sp"-->
<!--                    android:layout_marginLeft="30dp"/>-->

<!--                <EditText-->
<!--                    android:id="@+id/remarks"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:layout_marginRight="30dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:layout_centerInParent="true"/>-->

                <Button
                    android:id="@+id/button_confirm_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Confirm Payment"/>

            </LinearLayout>
        </RelativeLayout>


    </ScrollView>
    <RelativeLayout
        android:id="@+id/alertConfirm"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@drawable/alert"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/check"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_margin="15dp"
                android:textAlignment="center"
                android:text="Payment Confirmation has been sent, please wait for Verififacation"/>

            <Button
                android:id="@+id/okayP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ok"/>
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/vendorID"/>

    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="90dp"
        android:background="@drawable/background_plant">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:progressDrawable="@drawable/green_progress_bar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait ..."
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/alert2"
        android:paddingTop="90dp"
        android:paddingBottom="90dp"
        android:layout_margin="30dp"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/checkpayment"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Purchased"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttoN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert2"
            android:text="Okay"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"/>

    </LinearLayout>





</RelativeLayout>